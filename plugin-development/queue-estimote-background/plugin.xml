<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.themobilelife.queue-estimote-background"
    version="0.3.2">
    <name>queue-estimote-background</name>
    <description>Queue Estimote Background Plugin</description>
    <license>MIT</license>
    <keywords>phonegap,background geolocation</keywords>

    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>

    <!-- <dependency id="org.apache.cordova.geolocation" />-->

    <js-module src="www/js/estimote_background.js" name="EstimoteBackground">
        <clobbers target="plugins.EstimoteBackground" />
    </js-module>

     <platform name="ios">
        <!-- required background modes:  App registers for location updates -->
        <config-file target="*-Info.plist" parent="UIBackgroundModes">
            <array>
                <string>location</string>
            </array>
        </config-file>

        <config-file target="config.xml" parent="/*">
            <feature name="EstimoteBackground">
                <param name="ios-package" value="EstimoteBackground"/>
            </feature>
        </config-file>
		<framework src="CoreBluetooth.framework" />
		<framework src="CoreLocation.framework" />
		<framework src="SystemConfiguration.framework" />
		<framework src="libicucore.dylib" />
		<framework src="libc++.dylib" />
		<framework src="CFNetwork.framework" />
		<framework src="Security.framework" />
        <header-file src="src/ios/Firebase.framework/Headers/FDataSnapshot.h"/>
        <header-file src="src/ios/Firebase.framework/Headers/FEventType.h"/>
        <header-file src="src/ios/Firebase.framework/Headers/Firebase.h"/>
        <header-file src="src/ios/Firebase.framework/Headers/FMutableData.h"/>
        <header-file src="src/ios/Firebase.framework/Headers/FQuery.h"/>
        <header-file src="src/ios/Firebase.framework/Headers/FTransactionResult.h"/>
		<framework src="src/ios/Firebase.framework" custom="true" />
		<source-file src="src/ios/libEstimoteSDK.a" framework="true" />
		<header-file src="src/ios/ESTBeacon.h" />
		<header-file src="src/ios/ESTBeaconDefinitions.h" />
		<header-file src="src/ios/ESTBeaconManager.h" />
		<header-file src="src/ios/ESTBeaconRegion.h" />
		<header-file src="src/ios/ESTBeaconUpdateInfo.h" />
        <header-file src="src/ios/EstimoteBackgroundBeacons.h" />
        <source-file src="src/ios/EstimoteBackgroundBeacons.m" />
        <header-file src="src/ios/EstimoteBackground.h" />
        <source-file src="src/ios/EstimoteBackground.m" />
     </platform>          

</plugin>
